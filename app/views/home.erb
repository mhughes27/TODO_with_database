<div class="mainContent">

<h1>To Do List</h1>
<% @incomplete.each do |element| %>
	<ul>
		<li><%= element["name"] %></li>
		<li><%= element["description"] %></li>
		<form method="post" action="/delete"> 
			<input type="hidden"  name="task_id" value="<%= element["task_id"] %>">
			<input type="hidden" name="num" value ="2">
			<input type="submit" value="Delete">
		</form>
	</ul>
<% end %>

<h1 class="ListTitle">Completed Tasks</h1>
